        Assert.assertEquals(messageReceived, E05_06_Usage.row_messageRcv_desc);
        String photoSent = appOperation.getElement(driver, E05_06_Usage.row_picsent_text1).getText();
        Assert.assertEquals(photoSent, E05_06_Usage.row_picsent_desc);
        String photoReceived = appOperation.getElement(driver, E05_06_Usage.row_picrcv_text1).getText();
        Assert.assertEquals(photoReceived, E05_06_Usage.row_picrcv_desc);
        String voiceSent = appOperation.getElement(driver, E05_06_Usage.row_voicesent_text1).getText();
        Assert.assertEquals(voiceSent, E05_06_Usage.row_voicesent_desc);
        String voiceReceived = appOperation.getElement(driver, E05_06_Usage.row_voicercv_text1).getText();
        Assert.assertEquals(voiceReceived, E05_06_Usage.row_voicercv_desc);
        String locationSent = appOperation.getElement(driver, E05_06_Usage.row_locsent_text1).getText();
        Assert.assertEquals(locationSent, E05_06_Usage.row_locsent_desc);
    }

