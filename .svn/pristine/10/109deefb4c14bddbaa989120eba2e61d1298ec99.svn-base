public class UsagePage {
    public AppOperation appOperation;

    private static UsagePage usagePage;

    public static UsagePage getInstance() {
        if (usagePage == null) {
            synchronized (UsagePage.class) {
                if (usagePage == null) {
                    usagePage = new UsagePage();
                }
            }
        }
        return usagePage;
    }

    public UsagePage() {
        appOperation = AppOperationImp.getInstance();
    }


    /**
     * Usage页面打开后
     * 校验Usage页面的左上角返回按钮
     *
     * @param driver
     */
    public void setUsageBack(AppiumDriver driver) {
        appOperation.click(driver, E05_Setting.Usage);//Usage选项到该页
        appOperation.sleep(10);
        Boolean isExist = appOperation.waitForEle_Bool(driver, E05_06_Usage.row_messagesent);//message sent
        Assert.assertTrue(isExist);
        appOperation.click(driver, E05_06_Usage.usageback);//返回主界面
        Boolean mainPage = appOperation.waitForEle_Bool(driver, E00_Main.maintab_calls);
        Assert.assertTrue(mainPage);//确认返回主页了
    }

