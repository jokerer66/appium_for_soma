    /**
     * Usage页面打开后
     * 点击Usage页面Reset按钮，弹出浮层，校验浮层内的文案内容
     *
     * @param driver
     */
    public void resetUsageCoverDesc(AppiumDriver driver) {
        appOperation.click(driver, E05_Setting.Usage);//Usage选项到该页
        appOperation.sleep(2);
        resetUsageCover(driver,coverOperation.NoOperation);
    }

    /**
     * Usage页面打开后
     * 点击Usage页面Reset按钮，弹出浮层，点击浮层的Cancel按钮
     *
     * @param driver
     */
    public void resetUsageCoverCancel(AppiumDriver driver) {
        appOperation.click(driver, E05_Setting.Usage);//Usage选项到该页
        appOperation.sleep(2);
        resetUsageCover(driver,coverOperation.Cancel);
    }

    /**
     * Usage页面打开后
     * 点击Usage页面Reset按钮，弹出浮层，点击浮层的Reset按钮
     *
     * @param driver
     */
    public void resetUsageCoverReset(AppiumDriver driver) {
        appOperation.click(driver, E05_Setting.Usage);//Usage选项到该页
        appOperation.sleep(2);
        resetUsageCover(driver,coverOperation.Reset);
    }

    //浮层上分为三个，NoOperation只校验浮层内容
    public enum coverOperation{Cancel,Reset,NoOperation}

    public void resetUsageCover(AppiumDriver driver,coverOperation oper) {
        Boolean isExist = appOperation.waitForEle_Bool(driver, E05_06_Usage.row_resetstatistics);
        if (isExist == true) {//已经到了底部就直接操作
            appOperation.click(driver, E05_06_Usage.row_resetstatistics);//点击reset statistics
        } else if (isExist == false) {//没有到底的时候就滑动到底
            appOperation.swipeToUp(driver, 1000);//向上滑动屏幕
            appOperation.swipeToUp(driver, 800);//再次上滑屏幕到底
            appOperation.click(driver, E05_06_Usage.row_resetstatistics);//点击reset statistics
        }
        switch (oper){
            case NoOperation:
                String resetStatistics = appOperation.getElement(driver, E05_06_Usage.alertTitle).getText();
                Assert.assertEquals(resetStatistics, E05_06_Usage.alertTitleDesc);
                String resetMessage = appOperation.getElement(driver, E05_06_Usage.alertMessage).getText();
                Assert.assertEquals(resetMessage, E05_06_Usage.alertMessageDesc);
                break;
            case Cancel:
                appOperation.click(driver, E05_06_Usage.cancel);//点击cancel按钮重置
                Boolean cancelMessage = appOperation.waitForEle_Bool(driver, E05_06_Usage.alertMessage);
                Assert.assertFalse(cancelMessage);//浮层消失
                break;
            case Reset:
                appOperation.click(driver, E05_06_Usage.reset);//点击reset按钮重置
                appOperation.sleep(2);
                String resetToday = appOperation.getElement(driver, E05_06_Usage.row_resetstatistics_text2L).getText();
                Assert.assertEquals(resetToday, E05_06_Usage.row_resetstatistics_today);
                break;
        }
    }

}
